<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/minoUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="mino://tian:CEABE6CAD1B8773F369DE58C1D8DB206@8.210.250.201:28648" />


    <CheckBox
        android:id="@+id/xxorCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XXOR" />

    <EditText
        android:id="@+id/xxorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="20"
        android:hint="mino"
        android:text="mino"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/logCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="打开日志" />
    <CheckBox
        android:id="@+id/dnsCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="使用DNS" />


    <EditText
        android:id="@+id/dnsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="20"
        android:hint="180.76.76.76"
        android:text="180.76.76.76"
        android:visibility="gone" />
    <CheckBox
        android:id="@+id/appCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开启应用过滤" />
    <Button
        android:id="@+id/startbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="开始" />

    <Button
        android:id="@+id/stopbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="停止" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        <EditText
            android:id="@+id/logText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>